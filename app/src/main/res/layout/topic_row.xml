<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="9dp"
                android:layout_marginTop="0dp">
    <TextView
        android:id="@+id/lblCountStats"
        android:layout_gravity="center"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:text="#"
        android:height="25dp"
        android:width="25dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@drawable/circle_textview"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/lblTopic"
        android:layout_gravity="center"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="lblCategory"
        android:textColor="#00ff00"
        android:layout_marginLeft="8dp"
        android:textSize="16dp"
        android:maxLines="1"
        android:maxLength="28"
        android:ellipsize="end"
        android:layout_alignBaseline="@+id/lblCountStats"
        android:layout_alignBottom="@+id/lblCountStats"
        android:layout_toEndOf="@+id/lblCountStats"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/unlocked"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>