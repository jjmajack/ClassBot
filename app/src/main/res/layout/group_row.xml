<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="0dp">

    <TextView
        android:id="@+id/lblCountStats"
        android:layout_gravity="center"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:text="#"
        android:height="25dp"
        android:width="25dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@drawable/circle_textview"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/group_name"
        android:layout_gravity="center"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="lblCategory"
        android:textColor="#000"
        android:layout_marginLeft="8dp"
        android:maxLines="1"
        android:textSize="16dp"
        android:maxLength="40"
        android:ellipsize="end"
        android:layout_alignBaseline="@+id/lblCountStats"
        android:layout_alignBottom="@+id/lblCountStats"
        android:layout_toEndOf="@+id/lblCountStats"/>

</RelativeLayout>