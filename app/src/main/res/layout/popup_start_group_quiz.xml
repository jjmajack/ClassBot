<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="1dp"
                android:layout_margin="3dp"
                android:padding="14dp"
                android:background="@drawable/square_textview"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.peuyanaga.classbot.Activity.MainActivity"
                android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:columnCount="3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/rlt_one_word"
            android:clickable="true"
            android:layout_margin="3dp"
            android:background="@drawable/square_textview">
            <ImageButton
                android:id="@+id/one_word"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/dashboard2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One word"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:id="@+id/title"
                android:textColor="#000"
                android:layout_toRightOf="@id/one_word"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="3dp"
                android:textSize="9dp"
                android:textColor="#000"
                android:layout_below="@+id/title"
                android:layout_toRightOf="@id/one_word"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/rlt_multiple_choice"
            android:clickable="true"
            android:layout_margin="3dp"
            android:background="@drawable/square_textview">
            <ImageButton
                android:id="@+id/multiple_choice"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/dashboard" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multiple choice"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/title2"
                android:layout_toRightOf="@id/multiple_choice"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="3dp"
                android:textSize="9dp"
                android:textColor="#000"
                android:layout_below="@+id/title2"
                android:layout_toRightOf="@id/multiple_choice"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/rlt_spelling"
            android:clickable="true"
            android:layout_margin="3dp"
            android:background="@drawable/square_textview">
            <ImageButton
                android:id="@+id/spelling"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/dashboard2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spelling challenge"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/title3"
                android:layout_toRightOf="@id/spelling"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="3dp"
                android:textSize="9dp"
                android:textColor="#000"
                android:layout_below="@+id/title3"
                android:layout_toRightOf="@id/spelling"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
